<h1 class="title">  New Author</h1>

<div>
  <%= form_for @author do |f| %>
    <div class="field">
    </div>
    <div class="field">
      <div>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="field">
      <div>  
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
    </div>
    <div class="field">  
      <div>  
        <%= f.label :dob%>
        <%= f.text_field :dob %>
      </div>
    </div>

    <%= f.submit "Add Author" %>
  <% end %>  
</div>
<%= link_to 'Back', authors_path %>