<h1>BOOKS</h1>

<table>
  <thead>
    <tr>
      <th> Title</th>
      <th>Author Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><% author_name = book.authors %>
            <% author_name.each do |auth_name|%>
              <%= auth_name.first_name%>
              <%= auth_name.last_name%>
            <% end %>
        </td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } ,
        :remote => true, :class => "destroy_coin"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>